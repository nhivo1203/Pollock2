footer.footer
    .container
        .footer-top
            .footer-column
                include logo
            .footer-column
                h3.footer-heading Company
                ul.footer-links
                    each link in ["About","Work","Career","Contact","Blog"]
                        li.footer-link-item
                            a(href="#").footer-link.text--xsmall= link
